<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="12dp"
    android:focusable="true">

    <!--        android:layout_height="185dp"
-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="2dp"
        android:layout_gravity="center_horizontal"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:paddingTop="12dp"
            android:paddingLeft="166dp"
            android:paddingStart="130dp"
            android:paddingRight="12dp" >

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="18sp"
                tools:text="Batman: The long titleween"/>

            <TextView
                android:id="@+id/txt_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:textSize="12sp"
                tools:text="Jose Saramago"/>

            <android.support.v7.widget.AppCompatRatingBar
                style="@style/BookitoStarts"
                android:id="@+id/rating_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1"
                tools:rating="4.07"/>
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_add_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="@android:color/transparent"
            android:contentDescription="@string/search_activity_add_to"
            android:text="@string/search_activity_item_action"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:focusable="true"/>
    </android.support.v7.widget.CardView>


    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:background="@color/gray_light"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:elevation="6dp"/>

</FrameLayout>